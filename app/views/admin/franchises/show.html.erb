<h1>Admin::Franchises#index</h1>
<p>Find me in app/views/admin/franchises/index.html.erb</p>

<li><%= link_to "Create a new franchise", admin_franchises_new_path %></li>

<h1>Franchises</h1>
<table class="table table-bordered">
  <thead>
    <tr>
      <th >Nom du Franchise</th>
      <th >Nombre de magasin</th>
      <th >New magasin</th>
    </tr>
  </thead>
  <tbody>
    <% @franchises.each do |f| %>
      <tr>
        <td><%= f.nom_entreprise %></td>
        <td><%= f.magasin.count %></td>
        <td> <%= link_to "New Magasin", new_admin_franchise_magasin_path(f) %></td>
      </tr>
    <% end %>
    
  </tbody>
</table>