


<a><%= link_to "New Type of produit", new_magasin_magasin_type_de_produit_path(@vendeur) %></a>
<h1>Types of produit in magasin <%= @vendeur.magasin.try(:nom_magasin) %></h1>
<table class="table table-bordered">
  <thead>
    <tr>
      <th >Nom du type</th>
      <th >Nombre de produit</th>
      <th >Activit√©</th>
    </tr>
  </thead>
